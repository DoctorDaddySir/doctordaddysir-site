---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="pt-[25vh] pb-12 px-6 flex flex-col items-center">
    <div class="w-full max-w-3xl overflow-hidden relative">
      <!-- Slides container -->
      <div id="carousel-slides" class="flex transition-transform duration-700 ease-in-out">
        <!-- Slide 1: Pentai -->
        <div class="min-w-full flex flex-col items-center gap-4 text-center">
          <h2 class="text-4xl font-bold">Pentai</h2>
          <p class="text-lg max-w-xl">
            An operator-first, AI-augmented pentesting framework with plugin support, self-integrity checks, and complete control. 
          </p>
          <a href="/doctordaddysir-site/projects/pentai" class="mt-4 px-6 py-3 bg-primary text-background rounded-xl shadow hover:scale-105 transition-transform">
            Learn More
          </a>
        </div>

        <!-- Slide 2: PleXion -->
        <div class="min-w-full flex flex-col items-center gap-4 text-center">
          <h2 class="text-4xl font-bold">PleXion</h2>
          <p class="text-lg max-w-xl">
            A powerful, modular Java backend framework â€” think Spring with less magic and more precision. Built for extensibility.
          </p>
          <a href="/doctordaddysir-site/projects/plexion" class="mt-4 px-6 py-3 bg-primary text-background rounded-xl shadow hover:scale-105 transition-transform">
            Explore Framework
          </a>
        </div>

        <!-- Slide 3: Writeups -->
        <div class="min-w-full flex flex-col items-center gap-4 text-center">
          <h2 class="text-4xl font-bold">Writeups</h2>
          <p class="text-lg max-w-xl">
            In-depth walkthroughs of Hack The Box and CTF challenges. Learn, analyze, and grow with each exploit.
          </p>
          <a href="/doctordaddysir-site/writeups" class="mt-4 px-6 py-3 bg-primary text-background rounded-xl shadow hover:scale-105 transition-transform">
            Browse Writeups
          </a>
        </div>
      </div>
<!-- Carousel container -->
<div class="w-full max-w-3xl overflow-hidden relative">
  <!-- Slides go here -->
</div>

<!-- Navigation dots (below carousel, not inside) -->
<div class="mt-6 flex justify-center gap-4 z-0">
  <button class="w-4 h-4 rounded-full bg-primary opacity-70 hover:opacity-100" data-nav="0"></button>
  <button class="w-4 h-4 rounded-full bg-primary opacity-70 hover:opacity-100" data-nav="1"></button>
  <button class="w-4 h-4 rounded-full bg-primary opacity-70 hover:opacity-100" data-nav="2"></button>
</div>

  </main>

  <script>
    let current = 0;
    const total = 3;
    const slideContainer = document.getElementById('carousel-slides');

    function showSlide(index) {
      current = index;
      slideContainer.style.transform = `translateX(-${index * 100}%)`;
    }

    // Optional auto-advance every 6 seconds
    setInterval(() => {
      current = (current + 1) % total;
      showSlide(current);
    }, 6000);
  </script>
</Layout>
