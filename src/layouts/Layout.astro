---
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en" class="text-primary bg-background">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DoctorDaddySir</title>
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="font-sans">
    <main class="min-h-screen">
      <!-- Top Bar: Mini-Hero + Menu -->
      <div
        id="interface-bar"
        class="fixed top-0 left-0 z-20 w-full h-[20vh] bg-black flex flex-row items-center"
      >
<a href="/doctordaddysir-site/" class="h-full flex items-center justify-start pl-4 pr-8">
  <img
    src="/doctordaddysir-site/images/dds-hero.png"
    alt="DoctorDaddySir mini banner"
    class="h-full object-contain hover:opacity-90 transition-opacity"
  />
</a>


        <!-- Nav Menu -->
        <nav class="w-1/2 pr-12 flex justify-end items-center gap-8 text-primary">
          <!-- Link: Projects -->
          <a href="/doctordaddysir-site/projects" class="text-xl hover:text-primary">Projects</a>

          <!-- Link: Writeups -->
          <a href="/doctordaddysir-site/writeups" class="text-xl hover:text-primary">Writeups</a>

          <!-- Link: About -->
          <a href="/doctordaddysir-site/about" class="text-xl hover:text-primary">About</a>
        </nav>
      </div>

      <!-- Page Content -->
      <slot />
    </main>
  </body>
</html>
